{
  "name": "claude-proxy-hono",
  "version": "1.0.0",
  "description": "Claude-to-OpenAI API Proxy using Hono and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --require dotenv/config src/index.ts",
    "build": "tsc",
    "build:worker": "tsc src/worker.ts --outDir dist --target es2022 --module es2022 --moduleResolution node --allowSyntheticDefaultImports --esModuleInterop",
    "start": "node dist/index.js",
    "deploy": "wrangler deploy",
    "dev:worker": "wrangler dev",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "openai",
    "proxy",
    "hono",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "dotenv": "^17.2.1",
    "hono": "^4.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250813.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}